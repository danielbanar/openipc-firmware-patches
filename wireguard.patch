+            if echo "$POST_fps" | grep -qE '^[0-9]+$' && [ "$POST_fps" -ge 10 ] && [ "$POST_fps" -le 60 ]; then
+                echo "setfps 0 $POST_fps" > /proc/mi_modules/mi_sensor/mi_sensor0
+                echo "HTTP/1.1 200 OK"
+                echo "Content-type: text/plain"
+                echo ""
